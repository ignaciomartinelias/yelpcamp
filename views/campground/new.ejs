<% include ../partials/header %>

<div class="container">
    <div class="row" style="display: flex ; flex-direction: column">
        <h1 style="text-align: center">Create a New Campground </h1>
        <div style="width: 30% ; margin: 20px auto">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="Price" min="0.1" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Image Url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Description">
                </div>

                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </form>
        </div>
        <a href="javascript:history.back()" class="boton-back"><i class="fas fa-arrow-left"></i> Go Back </a>        
    </div>
</div>


<% include ../partials/footer %>